{
  "$id": "https://example.com/component.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Component",
  "description": "Component",
  "type": "object",
  "patternProperties": {
    "^.*$": {
      "additionalProperties": false,
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "title": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "i18n": {
          "type": "object",
          "patternProperties": {
            "^.*$": {
              "additionalProperties": false,
              "type": "object",
              "properties": {
                "title": {
                  "type": "string"
                },
                "description": {
                  "type": "string"
                }
              },
              "required": [
                "title",
                "description"
              ]
            }
          }
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "components": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "category": {
          "type": "string"
        },
        "type": {
          "type": "string"
        },
        "demos": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "url": {
                "type": "string"
              }
            },
            "required": ["name", "url"]
          }
        }
      },
      "required": [
        "name",
        "title",
        "description",
        "i18n",
        "tags",
        "category",
        "type",
        "demos"
      ]
    }
  }
}