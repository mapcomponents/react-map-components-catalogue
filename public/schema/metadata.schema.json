{
  "$id": "https://example.com/component.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema",
  "title": "Component",
  "description": "Component",
  "type": "object",
  "properties": {
    "category": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "i18n": {
      "type": "object",
      "properties": {
        "de": {
          "type": "object",
          "properties": {
            "description": {
              "type": "string"
            },
            "title": {
              "type": "string"
            }
          }
        }
      }
    },
    "name": {
      "type": "string"
    },
    "price": {
      "type": "integer"
    },
    "tags": {
      "type": "array"
    },
    "title": {
      "type": "string"
    },
    "type": {
      "type": "string"
    }
  },
  "patternProperties": {
    "^.*$": {
      "type": "object"
    }
  },
  "additionalProperties": false,
  "required": ["name", "title"],
  "dependentRequired": ["name", "title"]
}
